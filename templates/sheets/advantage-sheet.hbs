<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
  <div class="forms kult-item-sheet">
    <div>
      <label>{{localize "k4lt.Attribute"}}:</label>
      <select name="data.attributemod" value="{{data.attributemod}}">
        {{#select data.attributemod}}
        <option value="">{{localize "k4lt.None"}}</option>
        <option value="willpower">{{localize "k4lt.Willpower"}}</option>
        <option value="fortitude">{{localize "k4lt.Fortitude"}}</option>
        <option value="reflexes">{{localize "k4lt.Reflexes"}}</option>
        <option value="reason">{{localize "k4lt.Reason"}}</option>
        <option value="intuition">{{localize "k4lt.Intuition"}}</option>
        <option value="perception">{{localize "k4lt.Perception"}}</option>
        <option value="coolness">{{localize "k4lt.Coolness"}}</option>
        <option value="violence">{{localize "k4lt.Violence"}}</option>
        <option value="charisma">{{localize "k4lt.Charisma"}}</option>
        <option value="soul">{{localize "k4lt.Soul"}}</option>
        {{/select}}
      </select>
    </div>
    <div>
      <label>{{localize "k4lt.Type"}}:</label>
      <select name="data.type" value="{{data.type}}">
      {{#select data.type}}
        <option value="active">{{localize "k4lt.Active"}}</option>
        <option value="passive">{{localize "k4lt.Passive"}}</option>]
      {{/select}}
      </select>
    </div>
    <div class="tokens-container">
      <label>{{localize "k4lt.HasEdge"}}?</label>
      <input type="checkbox" name="data.hasTokens" {{checked data.hasTokens}} />
      {{#if data.hasTokens}}
        <label>{{localize "k4lt.Counter"}}:</label>
        <input class="tokens-counter" name="data.tokens" value="{{data.tokens}}" class="short-input" type="number" />
      {{/if}}
    </div>
    <div class="editor-row">
      <label>{{localize "k4lt.Effect"}}:</label>
      <div>{{editor content=data.effect target="data.effect" button=true owner=owner editable=editable}}</div>
    </div>
    <div class="editor-row">
      <label>{{localize "k4lt.Options"}}:</label>
      <div>{{editor content=data.options target="data.options" button=true owner=owner editable=editable}}</div>
    </div>
    <div>
      <label>{{localize "k4lt.Results"}}:</label>
      <div class="results-input">
        <div class="editor-row">
          <label>15+:</label>
          <div>{{editor content=data.completesuccess target="data.completesuccess" button=true owner=owner editable=editable}}</div>
        </div>
        <div class="editor-row">
          <label>10-14:</label>
          <div>{{editor content=data.partialsuccess target="data.partialsuccess" button=true owner=owner editable=editable}}</div>
        </div>
        <div class="editor-row">
          <label>0-9</label>
          <div>{{editor content=data.failure target="data.failure" button=true owner=owner editable=editable}}</div>
        </div>
      </div>
    </div>
  </div>
</form>
